<!DOCTYPE html>
<html>
  <head>
    <title>unLeashd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>
      window.dogParkURL = "<%= image_url('dog_park.jpg') %>";
      window.dogsRunningURL = "<%= image_url('dogs_running.jpg') %>";
      window.dogsSelfieURL = "<%= image_url('dogs_selfie.png') %>";
      window.dogPawURL = "<%= image_url('paw.png') %>";
      window.dogsRunning2URL = "<%= image_url('dogs_running2.jpg') %>";
      window.userIconURL = "<%= image_url('user-icon.png') %>";
      window.passwordIconURL = "<%= image_url('password-icon.png') %>";
      window.emailIconURL = "<%= image_url('email-icon.png') %>";

    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
